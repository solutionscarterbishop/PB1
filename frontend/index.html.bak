      const x = Number(n);
      if (Number.isNaN(x)) return "—";
      return x.toLocaleString();
    }
    function fmt2(n){
      const x = Number(n);
      if (Number.isNaN(x)) return "—";
      return x.toFixed(2);
    }
    function normalizeState(s){
      if (!s) return "";
      const t = String(s).trim();
      if (t.length === 2) return t.toUpperCase();
      return t;
