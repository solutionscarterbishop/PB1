   const FETCH_CACHE = new Map();
   const INFLIGHT = new Map();
   async function fetchJSON(url, { ttl = 60000 } = {}) {
    const now = Date.now();
    const cached = FETCH_CACHE.get(url);
    if (cached && (now - cached.t) < ttl) return cached.v;

    const prev = INFLIGHT.get(url);
    if (prev) prev.abort();
    const ctrl = new AbortController();
    INFLIGHT.set(url, ctrl);

    let res;
    try {
      res = await fetch(url, { cache: "no-store", signal: ctrl.signal });
    } catch (e) {
      INFLIGHT.delete(url);
      throw new Error(
        `API unreachable: ${url}. If local, confirm backend running on :10000.`
      );
    }
    INFLIGHT.delete(url);
    const text = await res.text();
    if (!res.ok) {
      let message = text;
      try {
        const parsed = JSON.parse(text);
        message = parsed?.error?.message || parsed?.error || parsed?.message || message;
      } catch {}
      throw new Error(`HTTP ${res.status} ${message ? `• ${message}` : ""} (${url})`);
    }
    if (!text) throw new Error(`Empty JSON response for ${url}`);
    let parsed;
    try {
      parsed = JSON.parse(text);
    } catch (e) {
      throw new Error(`Invalid JSON for ${url}`);
    }
    FETCH_CACHE.set(url, { t: now, v: parsed });
    return parsed;
  }

  function debounce(fn, delay = 200){
    let t;
    return (...args) => {
      clearTimeout(t);
      t = setTimeout(() => fn(...args), delay);
    };
  }

